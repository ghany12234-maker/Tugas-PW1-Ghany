    background-color: #333; /* Abu-abu tua */
    color: white;
    padding: 10px;
    text-align: center;
}

.nav-container {
    background-color: #ffc107; /* Kuning */
    padding: 10px 20px;
    display: flex; / Menggunakan Flexbox untuk memposisikan logo dan menu /
    justify-content: space-between;/ Menempatkan logo di kiri dan menu di kanan /
    align-items: center;
}

.logo {
    font-weight: bold;
    font-size: 1.5em;
}

