}

.main-container {
    display: grid;
    /* Membuat dua kolom: article (70% lebar) dan aside (30% lebar) */
    grid-template-columns: 70% 30%; 
    gap: 20px;
    padding: 20px;
}

article {
    background-color: #ffffff; /* Putih */
